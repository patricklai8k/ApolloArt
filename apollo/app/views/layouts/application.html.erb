<!DOCTYPE html>
<html>
<head>
  <title>Apollo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="nav-bar">
    <% if logged_in? %>
      <%= link_to('Log out', log_out_path, method: 'post') %>
    <% else %>
      <%= link_to('Log in', login_path) %>
    <% end %>
  </div>
  <%= yield %>

</body>
</html>
